      <a href="/games/<%= game._id %>">
        <div class="card">
          <div class="card-body">
            <h1 class="card-title"><%= game.name %></h1>
          </div>

          <img 
            src="<%= game.imgUrl %>"
            alt="<%= game.name %>"
          >
        </div>
      </a>
    <% }) %>
  </div>
